<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html {% block html_attributes %}lang="en"{% endblock %}>
<head>
  {% block head %}
  	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="style.css" />
    <title>{% block title %}
    		{% if motesByTag["html_head_title"] is defined %}
			{% for key in motesByTag["html_head_title"] %}
				{{key.getContent}}
			{% endfor %}
		{% endif %}
    {% endblock %}</title>
    <script>
    {% block script %}
		{% if motesByTag["html_head_script"] is defined %}
			{% for key in motesByTag["html_head_script"] %}
				{{key.getContent}}
			{% endfor %}
		{% endif %}
    {% endblock %}
    </script>
  {% endblock %}
</head>
<body> 
{% block body %}
  <h1>{{page.name}}</h1>
  <a href="{{ path('PageShow', { 'route': page.name }) }}">link to page via route "{{page.route}}"</a>
  
	{% if motesByTag["html_body"] is defined %}
		{% for key in motesByTag["html_body"] %}
			{{key.getContent}}
		{% endfor %}
	{% endif %}

   
  {% block footer %}
    <div id="footer"></div>
  {% endblock footer %}
{% endblock body %}
</body>
</html>
